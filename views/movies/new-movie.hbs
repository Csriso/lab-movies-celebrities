<h2>Add a movie</h2>

<form action="/movies/create" method="POST">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      name="title"
      class="form-control"
      placeholder="Enter the title of the movie"
    />
  </div>
  <div class="mb-3">
    <label for="genre" class="form-label">Genre</label>
    <input
      type="text"
      name="genre"
      class="form-control"
      placeholder="Enter the genre of the movie"
    />
  </div>
  <div class="mb-3">
    <label for="plot" class="form-label">Plot</label>
    <input
      type="text"
      name="plot"
      class="form-control"
      placeholder="Enter the plot of the movie"
    />
  </div>
  <div class="mb-3">
    <label for="cast" class="form-label">Cast</label>
    <select class="form-select" aria-label="Default select example" name="cast">
      {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}

    </select>
  </div>
  <button class="btn btn-primary mt-5">Add Movie</button>

</form>